						<td
							class = "centeralign nospace"
							title = "Merge into <% $target->email %>"
						>
							<label for="<% $id %>">
								<div class="padvert yellowhover">
									<input
										type  = "checkbox"
										class = "merge notfirst"
										name  = "pick_<% $id %>"
										id    = "<% $id %>"
										value = "1"
									>
								</div>
							</label>
						</td>
					</tr>
%				}

				</tbody>
			</table>

			<div class="libl rightalign">

				<span class="third centeralign">
					<input
						type  = "submit"
						value = "Merge Accounts"
